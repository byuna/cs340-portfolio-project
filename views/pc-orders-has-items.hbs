<H1>PC Orders Has Items</H1>

{{!-- Create a table --}}
<table id="pc_orders_has_items-table">
  {{!-- Header section --}}
  <thead>
    {{!-- For just the first row, we print each key of the row object as a header cell so we
      know what each column means when the page renders --}}
    <tr>
      {{#each data.[0]}}
      <th>
        {{@key}}
      </th>
      {{/each}}
    </tr>
  </thead>

  
  {{!-- Body section --}}
  <tbody>
    {{#each data}}
    <tr>
      <td>{{"Sub ID"}}</td>
      <td>{{"Order ID"}}</td>
      <td>{{"Item ID"}}</td>
      <td>{{"Quantity"}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h2>Compiling PC Orders</h2>
<p>To add more items to a PC order, please fill out the information below and click 'Submit'!</p>
<form id="add-pc_orders_has_items-form-ajax">
  <label for="input-pc_order_id">PC order ID: </label>
  <input type="number" name="input-pc_order_id" id="input-pc_order_id">

  <label for="input-item_id">Item ID: </label>
  <input type="number" name="input-item_id" id="input-item_id">

  <label for="input-quantity">Quantity: </label>
  <input type="number" name="input-quantity" id="input-quantity">

  <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_pc_orders_has_items.js"></script>